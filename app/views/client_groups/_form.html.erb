
<%= simple_form_for(@client_group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Name %>
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :SigfoxGroupID %>
    <%= f.input :SigfoxGroupName %>
  </div>

  <br/>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "waves-effect waves-light blue lighten-1 btn-small white-text" %>
  </div>

  <br/>
<% end %>
