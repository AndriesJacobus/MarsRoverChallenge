<p id="notice"><%= notice %></p>

<h3>Devices</h3>

<div class = "z-depth-5 hoverable" style="width: 95%; overflow: scroll; padding: 25px; border: 1px solid grey;">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Sigfoxid</th>
        <th>Sigfoxname</th>
        <th>Serialnumber</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Sigfoxdevicetypename</th>
        <th>Sigfoxgroupname</th>
        <th>Sigfoxcreatedbyid</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td><%= device.Name %></td>
          <td><%= device.SigfoxID %></td>
          <td><%= device.SigfoxName %></td>
          <td><%= device.SerialNumber %></td>
          <td><%= device.Longitude %></td>
          <td><%= device.Latitude %></td>
          <td><%= device.SigfoxDeviceTypeName %></td>
          <td><%= device.SigfoxGroupName %></td>
          <td><%= device.SigfoxCreatedByID %></td>
          <td><%= link_to 'Show', device, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
          <td><%= link_to 'Edit', edit_device_path(device), class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
          <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Device', new_device_path, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %>
