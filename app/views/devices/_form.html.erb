
<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Name %>
    <%= f.input :SigfoxID %>
    <%= f.input :SigfoxName %>
    <%= f.input :SerialNumber %>
    <%= f.input :Longitude %>
    <%= f.input :Latitude %>
    <%= f.input :SigfoxDeviceTypeID %>
    <%= f.input :SigfoxDeviceTypeName %>
    <%= f.input :SigfoxGroupID %>
    <%= f.input :SigfoxGroupName %>
    <%= f.input :SigfoxActivationTime %>
    <%= f.input :SigfoxCreationTime %>
    <%= f.input :SigfoxCreatedByID %>
  </div>

  <br/>

  <div class="form-actions">
    <%= f.button :submit, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %>
  </div>

  <br/>
<% end %>
