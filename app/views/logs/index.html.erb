
<h3><u>Logs</u></h3>

<div class = "z-depth-5 hoverable scroller">
  <table>
    <thead>
      <tr>
        <th>Time</th>
        <th>Trigger by bot</th>
        <th>Action type</th>
        <th>User</th>
        <th>Client</th>
        <th>Client Group</th>
        <th>Device</th>
        <th>Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @logs && @logs.each do |log| %>
        <tr>
          <td>
            <%= "#{log.created_at} Â±00:00" %>
          </td>

          <td><%= log.trigger_by_bot %></td>
          <td><%= log.action_type %></td>
          
          <% if log.user %>
            <td style = "padding-left: 25px;"><%= log.user.name %></td>
          <% else %>
            <td style = "padding-left: 25px;"><i>N/A</i></td>
          <% end %>
          
          <% if log.client %>
            <td style = "padding-left: 25px;"><%= log.client.Name %></td>
          <% else %>
            <td style = "padding-left: 25px;"><i>N/A</i></td>
          <% end %>
          
          <% if log.client_group %>
            <td style = "padding-left: 25px;"><%= log.client_group.name %></td>
          <% else %>
            <td style = "padding-left: 25px;"><i>N/A</i></td>
          <% end %>
          
          <% if log.device %>
            <td style = "padding-left: 25px;"><%= log.device.Name %></td>
          <% else %>
            <td style = "padding-left: 25px;"><i>N/A</i></td>
          <% end %>
          
          <% if log.message %>
            <td style = "padding-left: 25px;"><%= log.message.Data %></td>
          <% else %>
            <td style = "padding-left: 25px;"><i>N/A</i></td>
          <% end %>

          <td><%= link_to 'Show', log, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
          <td><%= link_to 'Delete', log, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Log', new_log_path, class: "waves-effect waves-light blue lighten-1 btn-small white-text" %> |
