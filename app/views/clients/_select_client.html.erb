
<div class = "z-depth-5 hoverable scroller">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th style = "white-space: nowrap; padding-left: 35px;">Longitude</th>
        <th style = "white-space: nowrap; padding-left: 35px;">Latitude</th>
        <th style = "white-space: nowrap; padding-left: 35px;">Sigfox DeviceType ID</th>
        <th style = "white-space: nowrap; padding-left: 35px;">Sigfox DeviceType Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.Name %></td>
          
          <td style = "padding-left: 35px;">
            N/A
          </td>
          <td style = "padding-left: 35px;">
            N/A
          </td>

          <td style = "padding-left: 35px;"><%= client.SigfoxDeviceTypeID %></td>
          <td style = "padding-left: 35px;"><%= client.SigfoxDeviceTypeName %></td>

          <% if @client_group %>
            <% if @client_group.client.nil? || @client_group.client.id != client.id %>
              <td><%= link_to 'Link Client', set_client_for_client_group_path(:ClientID => client.id, :id => @client_group.id), class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
            <% else %>
              <td><i>Currently Selected</i></td>
            <% end %>
          <% elsif @user && @user.client %>
            <% if @user.client.id != client.id %>
              <td><%= link_to 'Link Client', set_client_for_user_path(:ClientID => client.id, :id => @user.id), class: "waves-effect waves-light blue lighten-1 btn-small white-text" %></td>
            <% else %>
              <td><i>Currently Selected</i></td>
            <% end %>
          <% end %>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

