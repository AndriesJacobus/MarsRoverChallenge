
<div
  style = "
    background: url('assets/Wi-I-Landing_files/Deflexi.jpg');
    width: 125%;
    height: 91vh;
    background-repeat: no-repeat;
    background-size: cover;
    margin-left: -12.5%;
    margin-bottom: -12.5%;
  " >

  <div
    style ="
      position: absolute;
      top: 10%;
      left: 25%;
      width: 50%;
      margin: auto;
      padding: 20px;
      background-color: white;
      border-radius: 10px;
    " >

    <h3 style = "text-align: center; margin-top: -5px;"><u>Login</u></h3>
    <p id=”alert”><%= alert %></p>

    <%= form_tag sessions_path do |form| %>
      <div class=”field”>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class=”field”>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <br/>
      <div class=”actions”>
        <%= submit_tag "Login", class: "waves-effect waves-light blue lighten-1 btn-small white-text" %>
      </div>
    <% end %>
  </div>
</div>